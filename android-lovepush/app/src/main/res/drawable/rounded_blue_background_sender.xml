<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/blue" android:startColor="@color/blue" />
            <corners android:radius="@dimen/dimen_4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/blue" android:startColor="@color/blue" />
            <corners android:bottomRightRadius="@dimen/dimen_1dp" android:radius="@dimen/dimen_10dp" />
        </shape>
    </item>
</selector>