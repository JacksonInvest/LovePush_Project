<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DialogNameStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogLastMessageStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DialogUnreadCounterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingRight">4dp</item>

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/list_item_side_margin</item>
        <item name="android:background">@drawable/shape_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

</resources>