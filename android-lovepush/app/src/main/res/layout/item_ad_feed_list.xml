<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dimen_2dp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_4dp"
        android:id="@+id/root_view"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginRight="@dimen/dimen_12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dimen_12dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/dimen_80dp"
                        android:layout_height="@dimen/dimen_80dp"
                        android:paddingLeft="@dimen/dimen_8dp"
                        android:id="@+id/postedByImg"
                        android:paddingTop="@dimen/dimen_8dp"
                        app:civ_border_width="1.5dp"
                        app:civ_border_color="@color/grey"
                        android:paddingBottom="@dimen/dimen_8dp"
                        android:src="@drawable/profile_pic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/postedByName"
                                android:fontFamily="@font/roboto_light"
                                android:singleLine="true"
                                android:text="@string/app_name"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_16pixels" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:singleLine="true"
                                android:id="@+id/postedTimeTV"
                                android:text="@string/dummy_date"
                                android:textColor="@color/black_light"
                                android:textSize="@dimen/text_12pixels" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:singleLine="false"
                            android:id="@+id/postLocationTV"
                            android:text="@string/dummy"
                            android:textColor="@color/black_light"
                            android:textSize="@dimen/text_14pixels" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/dimen_4dp"
                    android:paddingRight="@dimen/dimen_4dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_light"
                        android:singleLine="false"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:id="@+id/postTitleTV"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        android:text="@string/app_name"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_16pixels" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:singleLine="true"
                        android:id="@+id/postTypeTV"
                        android:padding="@dimen/dimen_4dp"
                        android:background="@drawable/bg_button_small"
                        android:text="@string/connect_ad"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12pixels" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_4dp"
                    android:maxLines="5"
                    android:id="@+id/postedDesTV"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/dummy_mid"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_14pixels" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_6dp"
            app:cardCornerRadius="@dimen/dimen_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/postIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/post_bg"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/ivReport"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_action_name" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_16dp"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_margin="@dimen/dimen_8dp"
                        android:id="@+id/cardLoveRechatIVquest"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        >
                        <ImageView
                            android:layout_width="@dimen/_42"
                            android:layout_height="@dimen/_42"
                            android:padding="@dimen/dimen_4dp"
                            android:src="@drawable/like_icon"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/cardChat"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_8dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        app:cardCornerRadius="@dimen/dimen_20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_4dp"
                            android:src="@drawable/chat_home"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardConnectRequest"
                        android:layout_margin="@dimen/dimen_8dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        app:cardCornerRadius="@dimen/dimen_20dp">
                        <ImageView
                            android:layout_width="@dimen/_42"
                            android:layout_height="@dimen/_42"
                            android:padding="@dimen/dimen_4dp"
                            android:src="@drawable/drink_icon"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>