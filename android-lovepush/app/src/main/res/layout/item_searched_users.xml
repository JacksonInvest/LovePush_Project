<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:emojicon="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">


<RelativeLayout
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@android:color/white"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_2dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_6dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:id="@+id/imageProfile"
            android:src="@drawable/placeholder_male_square"
            app:civ_border_width="1.5dp"
            app:civ_border_color="@color/grey"
            android:layout_marginStart="@dimen/dimen_4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Jimmy anderson"
                    android:id="@+id/nameTV"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/dimen_15dp"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:id="@+id/userName"
                    android:textColor="@color/chat_grey"
                    android:textSize="@dimen/text_13pixels"
                    app:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="@dimen/dimen_6dp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/textKm"

                android:text="14 KM"
                android:textColor="@color/chat_grey"
                android:textSize="@dimen/_14sdp"
                app:fontFamily="@font/roboto_regular" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
    <View style="@style/cus_view"
        android:layout_gravity="bottom"/>

</FrameLayout>