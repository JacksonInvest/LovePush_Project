<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:src="@drawable/logo_img" />

            <LinearLayout style="@style/edit_layout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/usernameET"
                    style="@style/edit_text"
                    android:drawableStart="@drawable/user"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/user" />


            </LinearLayout>


            <LinearLayout style="@style/edit_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/passwordET"
                        style="@style/edit_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/password"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/password" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/forgotTV"
                        style="@style/text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forgot"
                        android:textColor="@color/blue" />
                </LinearLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginTV"
                style="@style/bg_button"
                android:text="@string/sign_in" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/text_view"
                    android:text="@string/dont_account" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/signUpTV"
                    style="@style/text_view"
                    android:text="@string/sign_up"
                    android:textColor="@color/blue" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_26dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="22dp"
                    android:layout_weight="1"
                    android:background="@color/black_light"
                    android:layout_marginLeft="22dp" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/or_sign_in_with"
                    android:textAllCaps="true" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:background="@color/black_light"
                    android:layout_marginRight="22dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/facebookIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/fb" />


                <ImageView
                    android:id="@+id/instaIV"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/insta" />

                <ImageView
                    android:id="@+id/googleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:src="@drawable/gl" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>