<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_back_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@drawable/bg_round_et"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/edit_text"
                    android:drawableRight="@drawable/arrow_down"
                    android:hint="@string/select_country"
                    android:imeOptions="actionNext"
                    android:inputType="text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@drawable/bg_round_et"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/edit_text"
                    android:drawableRight="@drawable/arrow_down"
                    android:hint="@string/select_city"
                    android:imeOptions="actionNext"
                    android:inputType="text" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ageTV"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:fontFamily="@font/roboto_regular"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text="@string/select_age" />


            <com.crystal.crystalrangeseekbar.widgets.BubbleThumbRangeSeekbar
                android:id="@+id/ageBRB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:focusableInTouchMode="false"
                app:bar_color="@color/colorPrimaryDark"
                app:bar_highlight_color="@color/primary_shaded"
                app:corner_radius="5"
                app:data_type="_integer"
                app:left_thumb_color="@color/colorPrimaryDark"
                app:left_thumb_color_pressed="@color/colorPrimaryDark"
                app:max_value="60"
                app:min_value="18"
                app:right_thumb_color="@color/colorPrimaryDark"
                app:right_thumb_color_pressed="@color/colorPrimaryDark" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/edit_text"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:fontFamily="@font/roboto_regular"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text="@string/prefernces" />

            <LinearLayout
                style="@style/edit_layout"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/maleLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/maleIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_unfilled" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:fontFamily="@font/roboto_light"
                            android:singleLine="true"
                            android:text="@string/male"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_16pixels" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/femaleLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/femaleIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_unfilled" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:fontFamily="@font/roboto_light"
                            android:singleLine="true"
                            android:text="@string/female"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_16pixels" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_unfilled" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:fontFamily="@font/roboto_light"
                            android:singleLine="true"
                            android:text="@string/connect_ad"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_16pixels" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>