<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_16dp"
        android:orientation="vertical"
        android:background="@drawable/red_corners"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dimen_40dp"
                android:src="@drawable/check_plan"
                android:id="@+id/ivChecked"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/dimen_40dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="VIP"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dimen_30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue"
                    android:textAllCaps="true"
                    android:padding="@dimen/dimen_4dp"
                    android:id="@+id/txtType"
                    android:textSize="@dimen/dimen_30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvPlan"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="@dimen/padd_10"
            android:background="@drawable/grey_circle"
            android:layout_height="@dimen/padd_10"/>

        <View
            android:layout_width="@dimen/padd_10"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:background="@drawable/grey_circle"
            android:layout_height="@dimen/padd_10"/>

        <View
            android:layout_width="@dimen/padd_10"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:background="@drawable/accent_circle"
            android:layout_height="@dimen/padd_10"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Subscribe"
        android:background="@drawable/bg_button"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/txtAction"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_12dp"
        android:layout_margin="@dimen/dimen_16dp"
        android:layout_height="wrap_content" />
</LinearLayout>