<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view"


    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userIV"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_6dp"
                app:civ_border_color="@color/grey"
                app:civ_border_width="1.5dp"
                android:src="@drawable/placeholder_male_square" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:singleLine="false"
                    android:text="Jimmy anderson"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_15pixels" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lovePushIntensionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:text="@string/dummy_short"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_14pixels" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_8dp">



                <ImageView
                    android:id="@+id/acceptIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/accept" />
                <ImageView
                    android:id="@+id/rejectIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/reject" />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/cus_view" />


    </LinearLayout>

</LinearLayout>