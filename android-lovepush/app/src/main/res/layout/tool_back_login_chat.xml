<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/colorPrimary"
    app:contentInsetEnd="@dimen/margin_0"
    app:contentInsetLeft="@dimen/margin_0"
    app:contentInsetRight="@dimen/margin_0"
    app:contentInsetStart="@dimen/margin_0"
    app:elevation="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/back_arrow" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userIV"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/backIV"
            app:civ_border_color="@color/text_color_white"
            app:civ_border_width="@dimen/dimen_1dp"
            android:src="@drawable/profile_pic"
            android:layout_toRightOf="@+id/backIV" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/screenTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16pixels" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/online"
                android:visibility="gone"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12pixels" />
        </LinearLayout>

        <ImageView
            android:id="@+id/callIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_7dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:src="@drawable/call"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/videoIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/vedio" />

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>