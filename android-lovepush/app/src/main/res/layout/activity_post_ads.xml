<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.PostAdsActivity"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_back_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/edit_layout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/titleTV"
                    style="@style/edit_text"
                    android:hint="@string/title"
                    android:imeOptions="actionNext"
                    android:inputType="text" />

            </LinearLayout>


            <LinearLayout style="@style/edit_layout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/descriptionTV"
                    style="@style/edit_text_multi"
                    android:hint="@string/description" />

            </LinearLayout>

            <LinearLayout
                style="@style/edit_layout"
                android:background="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/loveAdLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_8dp"
                        android:paddingBottom="@dimen/dimen_8dp">

                        <ImageView
                            android:id="@+id/loveAdIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_unfilled" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:fontFamily="@font/roboto_regular"
                            android:singleLine="true"
                            android:text="@string/love_ad"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_16pixels" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/connectAdLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30dp"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_8dp"
                        android:paddingBottom="@dimen/dimen_8dp">

                        <ImageView
                            android:id="@+id/connectAdIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_unfilled" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:fontFamily="@font/roboto_regular"
                            android:singleLine="true"
                            android:text="@string/connect_ad"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_16pixels" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageLL"
                style="@style/edit_layout"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_12dp"
                    android:src="@drawable/attach" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/edit_text"
                    android:id="@+id/imageTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add_image"
                    android:imeOptions="actionNext"
                    android:inputType="text" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageIV"
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:layout_marginRight="@dimen/dimen_12dp"
                    android:padding="@dimen/dimen_4dp"
                    android:src="@drawable/image" />

            </LinearLayout>

            <LinearLayout style="@style/edit_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/locationTV"
                    style="@style/edit_text"
                    android:hint="@string/set_location"
                    android:imeOptions="actionNext"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                style="@style/edit_layout"
                android:visibility="gone"
                android:background="@null">

                <LinearLayout
                    android:id="@+id/postAnonyLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingBottom="@dimen/dimen_8dp">

                    <ImageView
                        android:id="@+id/postAnonyIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toogle_unactive" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:singleLine="true"
                        android:text="@string/post_anony"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_16pixels" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/edit_layout"
                android:background="@null">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="@string/set_radius"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_16pixels" />

            </LinearLayout>

            <com.warkiz.widget.IndicatorSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_max="100"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:id="@+id/seekBar"
                app:isb_min="0"
                app:isb_progress="100"
                app:isb_seek_smoothly="true"
                app:isb_ticks_count="0"
                app:isb_show_tick_marks_type="oval"
                app:isb_tick_marks_size="13dp"
                app:isb_show_tick_texts="true"
                app:isb_tick_texts_size="15sp"
                app:isb_tick_texts_color="@color/color_grey"
                app:isb_thumb_color="@color/colorPrimaryDark"
                app:isb_thumb_size="20dp"
                app:isb_show_indicator="rounded_rectangle"
                app:isb_indicator_color="@color/colorPrimaryDark"
                app:isb_indicator_text_color="@color/white"
                app:isb_indicator_text_size="18sp"
                app:isb_track_background_color="@color/color_primary_dark"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@color/colorPrimary"
                app:isb_track_progress_size="4dp"
                app:isb_only_thumb_draggable="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radiusTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="0KM"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_16pixels" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="100KM"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_16pixels" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/postTV"
                style="@style/bg_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_100dp"
                android:text="@string/post" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>