<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.PreviewActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:layout_above="@+id/bottomView"
     android:layout_height="match_parent">
     <RelativeLayout
         android:layout_width="match_parent"
         android:padding="@dimen/dimen_8dp"
         android:background="@color/colorPrimary"
         android:layout_height="wrap_content">

         <ImageView
             android:id="@+id/backIV"
             android:layout_width="wrap_content"
             android:visibility="gone"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:padding="@dimen/dimen_15dp"
             android:src="@drawable/back_arrow" />


         <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/screenTitleTV"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_gravity="center"
             android:drawableStart="@drawable/logo_sm"
             android:drawablePadding="@dimen/dimen_5dp"
             android:gravity="center"
             android:textAllCaps="true"
             android:includeFontPadding="false"
             android:padding="@dimen/dimen_5dp"
             android:text="@string/app_name"
             android:textColor="@color/white"
             android:textSize="@dimen/text_20pixels" />


     </RelativeLayout>
     <LinearLayout
         android:layout_marginTop="@dimen/padd_10"
         android:layout_marginRight="@dimen/padd_10"
         android:layout_marginLeft="@dimen/padd_10"
         android:layout_marginBottom="-5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/titleTV"
             android:textAllCaps="true"
             android:textStyle="bold"
             android:textSize="17sp"
             android:fontFamily="@font/roboto_regular"
             android:textColor="@color/blue"
             android:text="@string/community_guide"
             android:padding="@dimen/padd_10"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.cardview.widget.CardView
             android:elevation="@dimen/_5sdp"
             app:cardCornerRadius="@dimen/padd_10"
             android:layout_margin="@dimen/_15sdp"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <WebView
                 android:id="@+id/webview"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

             </WebView>

         </androidx.cardview.widget.CardView>
     </LinearLayout>

 </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:id="@+id/bottomView"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Agree"
            android:id="@+id/txtAgree"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="@dimen/dimen_16dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/txtDisagree"
            android:background="@color/blue"
            android:text="Not Agree"
            android:padding="@dimen/dimen_16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>