<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/colorPrimary"
    app:contentInsetEnd="@dimen/margin_0"
    app:contentInsetLeft="@dimen/margin_0"
    app:contentInsetRight="@dimen/margin_0"
    app:contentInsetStart="@dimen/margin_0"
    app:elevation="@dimen/dimen_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/back_arrow" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/screenTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:drawableStart="@drawable/logo_sm"
            android:drawablePadding="@dimen/dimen_5dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:includeFontPadding="false"
            android:padding="@dimen/dimen_5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20pixels" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
<!--
            <ImageView
                android:id="@+id/menuIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:paddingBottom="@dimen/dimen_15dp"
                android:src="@drawable/list"
                android:tint="@color/white" />-->

            <ImageView
                android:id="@+id/filterIV"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp"
                android:src="@drawable/filter" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>