<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_right_bg"
        android:layout_marginStart="150dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp"
        android:layout_marginLeft="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/audio_progess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playPauseAudio"
                    android:src="@drawable/exo_icon_play"/>

            </LinearLayout>
            <TextView
                android:id="@+id/audio_duration_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:fontFamily="@font/roboto_light"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="00:00:00" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center">
            <TextView
                android:id="@+id/msg_text_time_message"
                style="@style/TextViewTimeMsg.Right"
                app:fontFamily="@font/roboto_light"
                android:paddingRight="@dimen/dimen_4dp"
                tools:text="12:00PM" />
            <TextView
                android:id="@+id/msg_text_status_message"
                style="@style/TextViewTimeMsg.Right"
                android:textSize="9sp"
                app:fontFamily="@font/roboto_light"
                android:layout_gravity="center|end"
                tools:text="Delivered" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>