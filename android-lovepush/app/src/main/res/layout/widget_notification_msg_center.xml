<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NotificationMessage">

    <LinearLayout style="@style/LinearWidgetTextMsg.Left">

        <LinearLayout
            android:id="@+id/msg_custom_widget_frame_top"
            style="@style/CustomWidgetFrame.Center" />

        <TextView
            android:id="@+id/msg_text_time_message"
            style="@style/TextViewTimeMsg.Center"
            android:textColor="@color/black"
            tools:text="August 16" />

        <TextView
            android:id="@+id/msg_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="User QB added Mask" />
    </LinearLayout>
</LinearLayout>