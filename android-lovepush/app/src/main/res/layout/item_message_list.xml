    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:padding="@dimen/dimen_2dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:id="@+id/image_dialog_icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="1.5dp"
            android:src="@drawable/placeholder_male_square"
            android:layout_marginStart="@dimen/dimen_4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:id="@+id/sender_name_tv"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/dimen_15dp"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/lastMsgTimeTextView"
                    android:text="@string/dummy_date"
                    android:textColor="@color/chat_grey"
                    android:textSize="11dp"
                    app:fontFamily="@font/roboto_light" />
            </LinearLayout>
            <TextView
                android:id="@+id/unBlock"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_alignParentRight="true"
                android:text="Unblock"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/dimen_4dp">
                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/text_dialog_last_message"
                    android:text="@string/dummy_short"
                    android:textColor="@color/chat_grey"

                    emojicon:emojiconSize= "18sp"
                    android:textSize="13sp"
                    android:layout_weight="2.5"
                    app:fontFamily="@font/roboto_light" />

                <LinearLayout
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/text_dialog_unread_count"
                        style="@style/DialogUnreadCounterStyle"
                        android:text="4"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
        <View style="@style/cus_view"
            android:layout_gravity="bottom"/>
    </LinearLayout>
