<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_40dp"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/rounded_blue_background_sender"
            android:gravity="right"
            android:padding="@dimen/dimen_10dp"
            android:text="Hi! how are you? Where are you?"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_12pixels" />

        <RelativeLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toLeftOf="@+id/imageView_msgReadStatus"
                android:gravity="right"
                android:text="1 Seconds ago"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_10pixels" />

            <ImageView
                android:id="@+id/imageView_msgReadStatus"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

